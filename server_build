- name: Build a Cloud Server
  gather_facts: False
  tasks:
    - name: Server build request
      local_action:
        module: rax
        credentials: credentials
        name: rax-test1
        flavor: 3
        image: b11d9567-e412-4255-96b9-bd63ab23bcfe
        key_name: my_rackspace_key
        wait: yes
        state: present
        networks:
          - private
          - public
      register: rax

